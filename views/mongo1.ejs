   <div class="container" style="margin-top:50px">
          <center>
     <div class="jumbotron">
       <h1>  MongoDB Database Search UI </h1>
       <hr class="my-4">



     <form action="/query" method="post">

      <div class="container" style="width:300px">
         <label for="">Enter RollNo:</label><br>
         <input type="text" class="form-control" placeholder="Enter Your Rollno" name="rollno">
         <br>
         <button type="submit" class="btn btn-success btn-lg btn-block">View Record</button>
      </div>
     </form>
     <br>
     <form action="/viewAll" method="post">
      <div class="container" style="width:300px">
          <button type="submit" class="btn btn-warning btn-lg btn-block">View All Records</button>
      </div>
     </form>
     <br>

       <table class="table table-dark table-striped table-bordered table-hover">
         <thead>
           <tr>
             <th scope="col">Name</th>
             <th scope="col">Roll No</th>
           </tr>
         </thead>
        
         <tbody> <!--View All Records -->
           <% for(var i=0; i < result.length; i++) { %>
          <tr>
            <td><%= result[i].name %></td>
            <td><%= result[i].rollno %></td>
          </tr>

          <% } %>
         </tbody>



       </table>




   </center>
